<h1>Burgers!</h1>

<div class="burgerCol">
  <h2>Burgers that are not eaten</h2>

  <ul>
    {{#each burgers}}
      {{#unless devoured}}
          {{> burgers/burgerItem devoured=false}}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="burgerCol">
  <h2>Burgers that have been devoured!</h2>

  <ul>
    {{#each burgers}}
      {{#if devoured}}
          {{> burgers/burgerItem devoured=true}}
      {{/if}}
    {{/each}}
  </ul>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="newBurgerName">Burger Name:</label>
    <input type="text" id="newBurgerName" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
